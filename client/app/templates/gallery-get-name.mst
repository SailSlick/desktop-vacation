<form class='row centered inverted' action='#'>
	<h2 class='col-12'>Adding New Gallery</h2>
	<h4 class='col-12'>Enter a name below</h4>

	<!-- Span to push fieldset into the middle -->
	<span class='col-4'></span>
	<fieldset class='form-group col-4'>
		<input type='text' class='form-control' id='gallery-name' placeholder='Enter a name'>

		<br>

		<button type='submit' class='btn btn-primary'>Add</button>
		<button type='button' class='btn btn-danger'>Cancel</button>
	</fieldset>
</form>
