{
  "name": "desktop-vacation",
  "productName": "Desktop Vacation",
  "description": "Desktop Wallpaper Manager",
  "version": "1.0.0",
  "author": "CPSSD2 Team Vaca",
  "copyright": "Â© 2017, CPSSD2",
  "homepage": "http://cpssd.net",
  "repository": "https://github.com/CPSSD/vacation",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.cpssd.desktop-vacation",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start",
    "makeDb": "node ./src/javascript/create-base-db.js",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "test-jenkins": "JUNIT_REPORT_PATH=tests.xml npm test -- -R mocha-jenkins-reporter",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "fs-jetpack": "^0.10.2",
    "jquery": "^3.1.1",
    "mustache": "^2.3.0",
    "tether": "^1.4.0",
    "lokijs": "^1.4.2"
  },
  "devDependencies": {
    "async": "^2.1.4",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "electron": "^1.6.0",
    "electron-builder": "^8.6.0",
    "electron-mocha": "^3.0.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "gulp": "^3.9.1",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.11",
    "istanbul": "^0.4.5",
    "minimist": "^1.2.0",
    "mocha": "^3.2.0",
    "mocha-jenkins-reporter": "^0.3.7",
    "rollup": "^0.41.4",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.11",
    "spectron": "^3.6.0"
  }
}
