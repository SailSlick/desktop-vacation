{
  "name": "desktop-vacation",
  "productName": "Desktop Vacation",
  "description": "Desktop Wallpaper Manager",
  "version": "1.0.0",
  "author": "CPSSD2 Team Vaca",
  "copyright": "Â© 2017, CPSSD2",
  "homepage": "http://cpssd.net",
  "repository": "https://github.com/CPSSD/vacation",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "net.cpssd.desktop-vacation",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "node scripts/build.js",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "prestart": "npm run build",
    "start": "electron .",
    "makeDb": "node ./src/javascript/create-base-db.js",
    "createDb": "node ./src/javascript/create-empty-db.js",
    "lint": "eslint -f checkstyle -o checkstyle-result.xml src ; exit 0",
    "pretest": "npm run build",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "test-jenkins": "JUNIT_REPORT_PATH=unit-tests.xml xvfb-maybe npm test -- -R mocha-jenkins-reporter",
    "coverage": "xvfb-maybe npm test -- -R scripts/istanbul-reporter",
    "coverage-all": "node ./scripts/build_coverage_report.js"
  },
  "dependencies": {
    "async": "^2.1.4",
    "bootstrap": "^3.3.7",
    "electron": "^1.6.0",
    "fs-jetpack": "^0.10.2",
    "lokijs": "^1.4.2",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.4.2",
    "request": "^2.80.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "chai-things": "^0.2.0",
    "electron-builder": "^8.6.0",
    "electron-mocha": "^3.0.0",
    "electron-react-devtools": "^0.4.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "istanbul": "^0.4.5",
    "minimist": "^1.2.0",
    "mocha": "^3.2.0",
    "mocha-jenkins-reporter": "^0.3.7",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-less": "^0.1.3",
    "rollup-plugin-node-builtins": "^2.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "sinon": "^1.17.7",
    "source-map-support": "^0.4.11",
    "xvfb-maybe": "^0.1.3"
  }
}
